@model IEnumerable<Kid_PalaceA2.Models.ProductM.ToyModel>

@{
    ViewData["Title"] = "Showtoys";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h2>All Products</h2>
            </div>
            <br />
            <div class="table-responsive" style="background-color:white">


                <table id="example" class="ui celled table" style="width:100%">
                    <thead>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.ToyImg)</th>
                            <th> @Html.DisplayNameFor(model => model.ToyName)</th>
                            <th> @Html.DisplayNameFor(model => model.PrdQuantity)</th>
                            <th> @Html.DisplayNameFor(model => model.ToyPrice)</th>
                            <th> @Html.DisplayNameFor(model => model.Discount)%</th>
                            <th> @Html.DisplayNameFor(model => model.SalePrice)</th>
                            <th> @Html.DisplayNameFor(model => model.PCategoryName)</th>
                            <th> @Html.DisplayNameFor(model => model.SupplierName)</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">

                                    <img class="forkawesome-pencil-square" src="@("~/img/"+item.ToyImg)" asp-append-version="true" style="width: 100px; height: 100px;" />
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.ToyName)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.PrdQuantity)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.ToyPrice)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.Discount)%
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.SalePrice)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.PCategoryName)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.SupplierName)
                                </td>
                                <td class="align-middle">
                                    @*<a class="btn btn-outline-primary" asp-action="AddToy" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>*@

                                    <a class=""> @Html.ActionLink("Update", "Create", new { id = item.Id, item.ImageFile, item.ToyName, item.ToyPrice, item.PCategoryName, item.SupplierName }, new { @class = "btn btn-primary bi bi-pencil-square" }) </a>

                                    <a class=""> @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger text-white bi bi-trash", onclick = "return confirm('Do you really want to delete this report')" })</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
